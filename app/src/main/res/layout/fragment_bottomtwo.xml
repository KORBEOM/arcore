<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomFragment_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bottomfragment_two">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        app:title="TAC 설정"
        app:titleTextColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="top"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:text="법적 정보"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/locationSettingsButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이용약관"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/locationSettingsButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개인정보 처리방침"
            android:layout_marginTop="8dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도움말 및 지원"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/notificationSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고객 지원 문의"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버전 정보"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/logoutButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버전 정보"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</FrameLayout>